    <form action="/listings/<%=listing._id%>?_method=PUT" method="post">
        <div>
            <label for="title" class="form-title"> Title</label>
        <input type="text" class="form-control" value=<%= listing.title %> name="listing[title]" placeholder="enter title">
    </div>
