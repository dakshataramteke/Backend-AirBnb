<% layout("layouts/boilerplate") %>
<body>
    <h3>Edit </h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" novalidate class="needs-validation">
        <div>
            <label for="title" class="form-title"> Title</label>
        <input type="text" class="form-control" value=<%= listing.title %> name="listing[title]" placeholder="enter title"required>
        <div class="invalid-feedback">
            Please write a Title.
          </div>
    </div>
    <div>
        <label for="description" class="form-title">Description</label>
        <textarea type="text" class="form-control"  name="listing[description]" placeholder="enter description"required><%= listing.description%></textarea>
        <div class="invalid-feedback">
            Please write a Description.
          </div>
        </div>
        <div>
            <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control" value=<%= listing.price.toLocaleString("en-IN") %> name="listing[price]" placeholder="enter price"required>
        <div class="invalid-feedback">
            Please write a Price.
          </div>
    </div>
    <div>        
        <label for="image" class="form-label">Image</label>
        <input type="text" class="form-control" value=<%= listing.image %> name="listing[image]" placeholder="enter URL"required>
        <div class="invalid-feedback">
            Please write a Image.
          </div>
    </div>

    <div>
        <label for="country" class="form-label">Country</label>
        <input type="text" class="form-control" value=<%= listing.country %> name="listing[country]" placeholder="enter country"required>
        <div class="invalid-feedback">
            Please enter a Country.
          </div>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" value=<%= listing.location %> name="listing[location]" placeholder="enter location"required>
        <div class="invalid-feedback">
            Please enter a Location.
          </div>
    </div>
        <button>Edit</button>
       
</body>
