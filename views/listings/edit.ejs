            <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control" value=<%= listing.price %> name="listing[price]" placeholder="enter price">
    </div>
    <div>        
        <label for="image" class="form-label">Image</label>
        <input type="text" class="form-control" value=<%= listing.image %> name="listing[image]" placeholder="enter URL">
    </div>

    <div>
        <label for="country" class="form-label">Country</label>
        <input type="text" class="form-control" value=<%= listing.country %> name="listing[country]" placeholder="enter country">
    </div>
    <div>
        <label for="location" class="form-label">LOcation</label>
        <input type="text" class="form-control" value=<%= listing.location %> name="listing[location]" placeholder="enter location">
    </div>
